<h2>Willkommen beim Ticketmanager!</h2>
<form action="/login" method="post" class="pure-form pure-form-aligned">
    <fieldset>
        <legend>Anmelden</legend>
        <div class="pure-g">
            <div class="pure-u-1 pure-control-group">
                <label for="name">Benutzername</label>
                <input name="username" class="pure-input-2-3" id="name" type="text" placeholder="Benutzername">
            </div>
            <div class="pure-u-1 pure-control-group">
                <label for="password">Passwort</label>
                <input name="password" class="pure-input-2-3" id="password" type="password" placeholder="Passwort">
            </div>
            <div class="pure-u-1 pure-controls">
                <button type="submit" class="pure-button pure-button-primary">Anmelden</button>
            </div>
        </div>
    </fieldset>
</form>