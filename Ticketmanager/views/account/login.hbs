<h2>{{localize 'welcome to the ticketmanager'}}</h2>
<form action="/login" method="post" class="pure-form pure-form-aligned">
    <input type="hidden" value="{{target}}" />
    <fieldset>
        <legend>{{localize 'login'}}</legend>
        <div class="pure-g">
            <div class="pure-u-1 pure-control-group">
                <label for="name">{{localize 'username'}}</label>
                <input name="username" class="pure-input-2-3" id="name" type="text" placeholder="{{localize 'username'}}">
            </div>
            <div class="pure-u-1 pure-control-group">
                <label for="password">{{localize 'password'}}</label>
                <input name="password" class="pure-input-2-3" id="password" type="password" placeholder="{{localize 'password'}}">
            </div>
            <div class="pure-u-1 pure-controls">
                <button type="submit" class="pure-button pure-button-primary">{{localize 'login'}}</button>
            </div>
        </div>
    </fieldset>
</form>