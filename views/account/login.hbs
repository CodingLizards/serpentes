<h2>{{localize 'welcome to the serpentes'}}</h2>
<form action="/login?target={{target}}" method="post" class="pure-form pure-form-aligned">
    <fieldset>
        <legend>{{localize 'login'}}</legend>
        <div class="pure-control-group">
            <label for="name">{{localize 'username'}}</label>
            <input name="username" class="pure-u-15-24" id="name" type="text" placeholder="{{localize 'username'}}">
        </div>
        <div class="pure-control-group">
            <label for="password">{{localize 'password'}}</label>
            <input name="password" class="pure-u-15-24" id="password" type="password" placeholder="{{localize 'password'}}">
        </div>
        <div class="pure-controls">
            <button type="submit" class="pure-button pure-button-primary">{{localize 'login'}}</button>
        </div>
    </fieldset>
</form>