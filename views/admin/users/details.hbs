{{#with data}}
<div class="pure-menu pure-menu-open pure-menu-horizontal">
    <ul>
        <li class="pure-menu-selected"><a href="#details" data-toggle="tabs">{{localize 'user details'}}</a></li>
        <li><a href="#edit" data-toggle="tabs">{{localize 'edit user'}}</a></li>
    </ul>
</div>
<div class="pure-form pure-menu-page pure-menu-selected" id="details">
    <fieldset>
        <legend>{{localize 'user details'}}</legend>
        <h4>{{localize 'username'}}</h4>
        <p>{{_id}}</p>
        <h4>{{localize 'is admin'}}</h4>
        {{#if isadmin}}
        <i class="fa fa-toggle-on fa-2x"></i>
        {{else}}
        <i class="fa fa-toggle-off fa-2x"></i>
        {{/if}}
        <h4>{{localize 'firstname'}}</h4>
        <p>{{firstname}}</p>
        <h4>{{localize 'lastname'}}</h4>
        <p>{{lastname}}</p>
        <h4>{{localize 'emailaddress'}}</h4>
        <p>{{emailaddress}}</p>
        <h4>{{localize 'phonenumber'}}</h4>
        <p>{{phonenumber}}</p>
        <h4>{{localize 'department'}}</h4>
        <p>{{localize department}}</p>
    </fieldset>
</div>
<form class="pure-form pure-form-aligned pure-menu-page" action="/admin/users/update/{{uriencode _id}}" method="post" id="edit">
    <fieldset>
        <legend>{{localize 'edit user'}}</legend>
        <div class="pure-control-group">
            <label for="firstname">{{localize 'firstname'}}*</label>
            <input required name="firstname" class="pure-u-20-24" id="firstname" type="text" value="{{firstname}}" placeholder="{{localize 'firstname'}}">
        </div>
        <div class="pure-control-group">
            <label for="lastname">{{localize 'lastname'}}*</label>
            <input required name="lastname" class="pure-u-20-24" id="lastname" type="text" value="{{lastname}}" placeholder="{{localize 'lastname'}}">
        </div>
        <div class="pure-control-group">
            <label for="emailaddress">{{localize 'emailaddress'}}*</label>
            <input required name="emailaddress" class="pure-u-20-24" id="emailaddress" type="email" value="{{emailaddress}}" placeholder="{{localize 'emailaddress'}}">
        </div>
        <div class="pure-control-group">
            <label for="phonenumber">{{localize 'phonenumber'}}*</label>
            <input required name="phonenumber" class="pure-u-20-24" id="phonenumber" type="tel" value="{{phonenumber}}" placeholder="{{localize 'phonenumber'}}">
        </div>
        <div class="pure-control-group">
            <label for="department">{{localize 'department'}}*</label>
            <select required name="department" class="pure-u-20-24" id="department">
                <option value="projectmanagement"
                        {{#compare department '===' 'projectmanagement'}}
                        selected
                        {{/compare}}>
                    {{localize 'project management'}}
                </option>
                <option value="development"
                        {{#compare department '===' 'development'}}
                        selected
                        {{/compare}}>
                    {{localize 'development'}}
                </option>
                <option value="qualityassurance"
                        {{#compare department '===' 'qualityassurance'}}
                        selected
                        {{/compare}}>
                    {{localize 'qualityassurance'}}
                </option>
                <option value="operations"
                        {{#compare department '===' 'operations'}}
                        selected
                        {{/compare}}>
                    {{localize 'operations'}}
                </option>
            </select>
        </div>
        <div class="pure-controls">
            <label for="isadmin" class="pure-checkbox">
                <input id="isadmin" type="checkbox" name="isadmin" {{bindAttr checked="isadmin"}} /> {{localize 'is admin'}}
            </label>
            <button class="pure-button pure-button-primary" type="submit">{{localize 'save'}}</button>
        </div>
    </fieldset>
</form>
{{/with}}